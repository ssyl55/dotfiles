# Hotkeys for different accounts
macro index,pager <F1> '<sync-mailbox><enter-command>source ~/dotfiles/mutt/accounts/case<enter><change-folder>!<enter>'
macro index,pager <F2> '<sync-mailbox><enter-command>source ~/dotfiles/mutt/accounts/steuyve<enter><change-folder>!<enter>'
macro index,pager <F3> '<sync-mailbox><enter-command>source ~/dotfiles/mutt/accounts/stliu<enter><change-folder>!<enter>'

# Connection settings
set ssl_starttls = yes
set ssl_force_tls = yes

# Cache
set header_cache = "~/.mutt/cache/headers"
set message_cachedir = "~/.mutt/certificates"

# Basic settings
set move = no
set editor = 'vim'
set edit_headers = yes
set charset = UTF-8
set send_charset = UTF-8
set mailcap_path = ~/.mutt/mailcap

# Connection settings
unset imap_passive
set imap_keepalive = 900
set timeout = 10
set beep_new
set sort = reverse-threads
set sort_aux = date-received

# Folder hooks to different accounts
folder-hook 'case' 'source ~/dotfiles/mutt/accounts/case'
folder-hook 'steuyve' 'source ~/dotfiles/mutt/accounts/steuyve'
folder-hook 'stliu' 'source ~/dotfiles/mutt/accounts/stliu'

# On startup, access case account
source ~/dotfiles/mutt/accounts/case

# Pager settings
set pager_context = 3	# number of context lines to show
set pager_stop		# don't go to next message automatically
set menu_scroll		# scroll in menus
set tilde		# show tildes like in vim
unset markers		# no ugly plus signs

set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+}+"
alternative_order text/plain text/enriched text/html

## Pager keybindings
bind pager k previous-line
bind pager j next-line
bind pager gg top
bind pager G bottom

bind pager R group-reply

## View attachments
bind attach <return> view-mailcap
