set my_pass = `security find-internet-password -g -a steuyve@gmail.com -s imap.gmail.com 2>&1 | perl -e 'if (<STDIN> =~ m/password: "(.*)"$/ ) { print $1; }'`

# IMAP settings
set imap_user = 'steuyve@gmail.com'
set imap_pass = $my_pass
set folder = 'imaps://imap.gmail.com:993'
set spoolfile = '+INBOX'
set postponed = '+[Gmail]/Drafts'

# SMTP settings
set smtp_url = 'smtp://steuyve@smtp.gmail.com:587/'
set smtp_pass = $my_pass
set from = 'steuyve@gmail.com'
set realname = 'Stephen Liu'
set smtp_authenticators = 'gssapi:login'
