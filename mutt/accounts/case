set my_pass = `security find-internet-password -g -a ssl76@case.edu -s imap.gmail.com 2>&1 | perl -e 'if (<STDIN> =~ m/password: "(.*)"$/ ) { print $1; }'`

# IMAP settings
set imap_user = 'ssl76@case.edu'
set imap_pass = $my_pass
set folder = 'imaps://imap.gmail.com:993'
set spoolfile = '+INBOX'
set postponed = '+[Gmail]/Drafts'

# SMTP settings
set smtp_url = 'smtp://ssl76@case.edu@smtp.gmail.com:587/'
set smtp_pass = $my_pass
set from = 'ssl76@case.edu'
set realname = 'Stephen Liu'
set smtp_authenticators = 'gssapi:login'
unset use_domain
set use_from = yes
